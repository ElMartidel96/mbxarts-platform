  "description": "CryptoGift Wallets DAO - Programmatic token release system with Aragon OSx",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:base": "hardhat run scripts/deploy/00-deploy-token.ts --network base",
    "deploy:sepolia": "hardhat run scripts/deploy/00-deploy-token.ts --network baseSepolia",
    "verify": "hardhat run scripts/deploy/04-verify-contracts.ts --network base",
