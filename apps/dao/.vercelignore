# Vercel Ignore - Optimized for Next.js deployment
# Strategy: Allow all public/ assets, exclude only dev/build artifacts

# ============================================
# PACKAGE MANAGER & NODE_MODULES
# ============================================
.pnpm-store
node_modules/.pnpm
node_modules/.cache

# ============================================
# DEVELOPMENT DIRECTORIES (NOT NEEDED IN PROD)
# ============================================
.git
.github
.claude
scripts
test
tests
CAPTURAS

# ============================================
# SMART CONTRACT ARTIFACTS (NOT NEEDED FOR FRONTEND)
# ============================================
/contracts
artifacts
cache
coverage
typechain-types
hardhat.config.js
hardhat.config.production.js
deployments/*
!deployments/deployment-base-latest.json

# ============================================
# BUILD ARTIFACTS
# ============================================
dist
build

# ============================================
# UNUSED SUBDIRECTORIES
# ============================================
frontend
ranking-frontend
ranking-backend
bots

# ============================================
# BACKUP FILES
# ============================================
backups
*.backup
*.bak
app/api/*/route.full.ts.backup

# ============================================
# CONFIG FILES (EXCEPT ESSENTIAL ONES)
# ============================================
*.config.js
*.config.ts
!next.config.js
!next.config.mjs
!tailwind.config.js
!tailwind.config.ts
!postcss.config.js
!sentry.server.config.js
!sentry.edge.config.js

# ============================================
# LOGS AND LOCKS
# ============================================
*.log
*.lock
!pnpm-lock.yaml

# ============================================
# ENVIRONMENT FILES (SECURITY)
# ============================================
.env*
!.env.production
.env.local
.env.dao
.env.deployment
.env.sentry-build-plugin

# ============================================
# MARKDOWN (EXCEPT ESSENTIAL ONES)
# ============================================
*.md
