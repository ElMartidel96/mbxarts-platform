    "console": "hardhat console",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,sol,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,sol,json,md}\"",
    "bot:start": "cd bots/eas-attestor && npm start",
    "bot:dev": "cd bots/eas-attestor && npm run dev",
    "setup": "ts-node scripts/setup-dao.ts",
    "setup:eas": "ts-node scripts/automation/01-setup-eas.ts",
    "setup:zealy": "ts-node scripts/automation/02-setup-zealy.ts",
    "setup:safe": "ts-node scripts/automation/03-setup-safe.ts",
    "setup:discord": "ts-node scripts/automation/04-setup-discord.ts",
    "setup:cloud": "ts-node scripts/automation/05-setup-cloud.ts"
  },
  "keywords": [
    "dao",
