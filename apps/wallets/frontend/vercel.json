{
  "framework": "nextjs",
  "buildCommand": "pnpm run build",
  "installCommand": "cd .. && pnpm install --frozen-lockfile",
  "devCommand": "pnpm run dev",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/auto-return",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/cleanup-transactions",
      "schedule": "0 */12 * * *"
    }
  ]
}