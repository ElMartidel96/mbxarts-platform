{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": [
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/**/*.test.ts", 
    "src/**/*.test.tsx",
    "jest.setup.js"
  ],
  "exclude": ["node_modules", "dist", ".next", "out"]
}