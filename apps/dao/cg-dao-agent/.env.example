# OpenAI API Key (Required)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# Agent Configuration
AGENT_MODEL=gpt-4o-mini
AGENT_NAME="CG DAO OPS Agent"
AGENT_VERSION=1.0.0

# Local Documentation Path (Absolute path to your DAO docs)
# Windows example: C:\\Users\\YourName\\cryptogift-wallets-DAO
# macOS/Linux example: /Users/YourName/cryptogift-wallets-DAO
DOCS_DIR=/path/to/cryptogift-wallets-DAO

# Additional allowed directories (comma-separated)
# Example: /path/to/contracts,/path/to/scripts
ADDITIONAL_DIRS=

# MCP Server Configuration
MCP_SERVER_TIMEOUT=30000
MCP_CACHE_TOOLS=true
MCP_MAX_FILE_SIZE=10485760  # 10MB in bytes

# Security Settings
ENABLE_WRITE_PROTECTION=true
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=./logs/audit.log

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MIN=60
RATE_LIMIT_TOKENS_PER_MIN=40000

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE_PATH=./logs/agent.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_MAX_FILES=5

# Service Configuration (for daemon mode)
SERVICE_MODE=false
SERVICE_PORT=3456
SERVICE_HOST=localhost

# Monitoring Settings
MONITOR_ENABLED=false
MONITOR_INTERVAL=300000  # 5 minutes in ms
MONITOR_WEBHOOK_URL=

# Base Network Configuration (for blockchain queries)
BASE_RPC_URL=https://mainnet.base.org
